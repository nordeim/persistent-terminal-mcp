# Persistent Terminal MCP Server Configuration

# MCP Server Port (for stdio transport, this is not used)
# MCP_PORT=3000

# REST API Server Port
REST_PORT=3001

# Terminal Configuration
MAX_BUFFER_SIZE=10000
SESSION_TIMEOUT=86400000

# Default Shell (leave empty for system default)
# DEFAULT_SHELL=/bin/bash

# Terminal Dimensions
DEFAULT_COLS=80
DEFAULT_ROWS=24

# Logging Level (error, warn, info, debug)
LOG_LEVEL=info

# Enable Debug Mode
# DEBUG=true
